<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>

            <gradient
                android:angle="270.0"
                android:centerColor="@color/c_ffffff"
                android:centerY="2.0"
                android:endColor="@color/c_ffffff"
                android:startColor="@color/c_ffffff" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <gradient
                    android:angle="270"
                    android:centerColor="@color/c_0090ff"
                    android:centerY="2"
                    android:endColor="@color/c_0090ff"
                    android:startColor="@color/c_0090ff" />
            </shape>
        </clip>
    </item>

</layer-list>